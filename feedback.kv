
<CounterLabel>:
    canvas.before:
        Color:
            rgba: self.colour
        Rectangle:
            pos: self.pos
            size: self.size
    count: 0
    text: "0"
    font_size: "30dp"
    color: self.colorcomp(self.colour)
    size_hint_y: None
    height: self.width
    orientation: 'vertical'


BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 0.1
        pos_hint: {'center_x': 0.5, 'top' : 1}
        canvas.before:
            Color:
                rgb: 1, 1, 0.4

            Rectangle:
                size: self.size

        Button:
            size_hint_x: 0.2
            text: "previous"
            on_press: sm.current = sm.previous()

        Label
            id: screenLabel
            size_hint_x: 0.6
            text: sm.current
            font_size: '30sp'
            color: (0.5, 0.686, 0.89, 1)

        Button:
            size_hint_x: 0.2
            text: "next"
            on_press: sm.current = sm.next()

    ScreenManager:
        id: sm
        on_current: screenLabel.text = sm.current

        canvas.before:
            Color:
                rgb: 0.64, 0.64, 0.64
            Rectangle:
                size: self.size

        Screen:
            name: 'Feedback'
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.9, 0.9
                pos_hint: {'center_x': 0.5, 'center_y' : 0.5}
                BoxLayout:
                    orientation: 'horizontal'
                    size_hint_y: 0.4
                    size_hint_x: 0.9
                    pos_hint: {'center_x': 0.5, 'center_y' : 0.5}

                    Label:
                        text: "hier Frage eingeben"
                        id: surveyLabel
                        font_size: "70dp"
                        valign: "middle"

                BoxLayout:
                    size_hint_y: 0.6                    
                    orientation: 'horizontal'
                    Button:
                        height: self.width
                        background_normal: "red.png"
                        on_press: red.increment()
                    Button:
                        height: self.width
                        background_normal: "yellow.png"
                        on_press: yellow.increment()
                    Button:
                        height: self.width
                        background_normal: "green.png"
                        on_press: green.increment()


        Screen:
            name: 'Results'
            BoxLayout:
                size_hint: 0.8, 0.8
                pos_hint: {'center_x': 0.5, 'center_y' : 0.5}
                orientation: "vertical"

                BoxLayout:
                    orientation: "horizontal"
                    size_hint_x: 0.9
                    pos_hint: {'center_x': 0.5, 'center_y' : 0.6}

                    TextInput:
                        size_hint_x: 0.8                    
                        size_hint_y: 0.8
                        id: surveyText
                        on_text: surveyLabel.text = self.text
                        pos_hint: {'center_x': 0.5, 'center_y' : 0.5}

                    BoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.2
                        size_hint_y: 0.8
                        pos_hint: {'center_x': 0.9, 'center_y' : 0.5}
                        Button:
                            text: "larger"
                            on_press:   if surveyLabel.font_size <= 200: surveyLabel.font_size += 10
                        Button:
                            text: "smaller"
                            on_press:  if surveyLabel.font_size >= 30: surveyLabel.font_size -= 10

                BoxLayout:
                    orientation: "vertical"
                    size_hint_y: 0.5
                    size_hint_x: 0.9
                    pos_hint: {'center_x': 0.5, 'center_y' : 0.5}

                    BoxLayout:
                        size_hint_y: 0.5
                        orientation: "horizontal"
                        CounterLabel:
                            id: red
                        CounterLabel:
                            id: yellow
                        CounterLabel:
                            id: green

                    Button:
                        size_hint_y: 0.3
                        text: "reset Counters"
                        id: resetButton
                        on_press: red.reset(), yellow.reset(), green.reset()


        Screen:
            name: 'credits'

            Label:
                pos_hint: {'center_x': 0.5, 'center_y' : 0.5}
                size_hint_y: 0.9
                size_hint_x: 0.9

                font_size: '40sp'
                text: "Like this app? \n Get it on student.kit.edu/~uqcyb \n \n FeedbackApp Version 1.2.1 \n By ZÃ¤ndy & MaxTheSax"
